
<h1 class="title">Lineages for <%= @organism.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last Seen</th>
      <th>Times Seen</th>
    </tr>
  </thead>

  <tbody>
    <% @lineages.each do |lineage| %>
      <tr>
        <td><a href="<%= lineage_url(lineage) %>"><%= lineage.name %></a></td>
        <% last_seen = lineage.fasta_records.order(date_submitted: :desc).first.date_submitted %>
        <td><%= last_seen.nil? ? 'Unknown' : last_seen.strftime("%Y-%m-%d") %></td>
        <td><%= lineage.fasta_records.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
